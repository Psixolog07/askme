<!DOCTYPE html>
<html>
  <head>
    <title>Askme</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="wrapper">
      <div class="navbar", style= <%= show_header_color_for_html_style(current_user) unless current_user.nil? %>>
        <p class="title-sm text-bold"><%= link_to "Ask me!", root_path %></p>
        <div>
          <% if current_user.present? %>
            <%= link_to show_nickname(current_user), user_path(current_user), class: "mr-lg" %>
            <%= button_to "Выйти", session_path, method: :delete %>
          <% else %>
            <%= link_to "Зарегистрироваться", new_user_path, class: "button button-yellow mr-sm" %>
            <%= link_to "Войти", new_session_path, class: "button button-yellow" %>
          <% end %>
        </div>
      </div>

      <% if flash[:notice].present? %>
        <p class="mb mt message message-notice"><%= flash[:notice] %></p>
      <% elsif flash[:alert].present? %>
        <p class="mb mt message message-notice"><%= flash[:alert] %></p>
      <% end %>
      
      <%= yield %>
    </div>
  </body>
</html>
